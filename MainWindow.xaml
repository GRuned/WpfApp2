<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="add" Content="Add" HorizontalAlignment="Left" Height="40" Margin="106,201,0,0" VerticalAlignment="Top" Width="151" Click="Button_Click"/>
        <Button x:Name="remove" Content="Remove" HorizontalAlignment="Left" Height="40" Margin="309,201,0,0" VerticalAlignment="Top" Width="154" Click="Button_Click_1"/>
        <Button x:Name="show" Content="Show All" HorizontalAlignment="Left" Height="40" Margin="516,201,0,0" VerticalAlignment="Top" Width="154" Click="Button_Click_2"/>
        <TextBox x:Name="input" HorizontalAlignment="Left" Height="23" Margin="106,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="564" TextChanged="Input_TextChanged"/>

    </Grid>
</Window>
